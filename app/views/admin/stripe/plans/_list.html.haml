%div.panel.panel-default
  %div.panel-heading= defined?(title) ? title : 'Plans'
  %div.panel-body
    %table.table.table-hover
      %thead
        %tr
          %th.col-md-3
            Name
          %th.col-md-8
            Product
          %th.col-md-1
      %tbody
        - plans.each do |plan|
          %tr
            %td= plan[:name]
            %td= plan[:metadata][:fission_product]
            %td
              %a{:href => admin_stripe_plans_path(plan[:id])}
                %span.glyphicon.glyphicon-zoom-in
              %a{:href => admin_edit_stripe_plan_path(plan[:id])}
                %span.glyphicon.glyphicon-cog
              %a{:href => admin_stripe_plan_path(plan[:id]), 'window-rails-ajax' => :delete, 'window-rails-url' => admin_stripe_plan_path(plan[:id]), 'window-rails-confirm' => "Destroy plan (#{plan[:name]})?", 'window-rails-title' => 'Plan destruction'}
                %span.glyphicon.glyphicon-cross
